(defpoll show_temp
  :interval "30s"
  "$HOME/.config/eww/scripts/weather/get_temp.sh"
)

(defpoll show_icon
  :interval "30s"
  "$HOME/.config/eww/scripts/weather/get_icon.sh"
)

(defwidget weather []
  (eventbox
    :class "weather-event"
    (box
      :class "weather"
      show_temp
      (image 
        :path show_icon
        :image-height 20
        :image-width 20
      )
    )
  )
)
